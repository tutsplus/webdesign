@import 'jeet/framework'
@import 'jeet/goodies'

brown(o = 1)
    rgba(108, 93, 75, o)

html
    background url(../../img/wood_bg.png)
body
    center()

#head
    cf()
    margin 30px auto
    #logo
        col(5)
    nav
        col(10)
        offset(9)
        a
            w(1,3)
            background brown(.9)
            padding 15px 5px
            text-align center
            color #fff
            text-decoration none
            border-radius 5px
            &:hover
                background brown(.7) 
#products
    figure
        w(1,3)
        margin-bottom gutter_width
        background brown(.9)
        img
            border 3px solid lighten(brown(), 70%)
            border-bottom 0
            border-top 0
            display block
            position relative
            z-index 1
            bottom -20px
            transition all 300ms ease
        &:nth-child(3n+3)
            last()
        &:hover
            img
                bottom -10px
    figcaption
        color #fff
        position relative
        z-index 2
        a:first-child
            background lighten(brown(), 40%)
            display block
            padding 20px
            color darken(brown(), 40%)
            text-decoration none
            font-weight bold 
            border-left 3px solid lighten(brown(), 35%)
            border-right 3px solid lighten(brown(), 35%)
            &:hover
                background lighten(brown(), 45%) 
        p
            padding 20px
            margin 0
        .gumroad_btn
            margin 0 20px 20px 20px
            display inline-block
            background darken(brown(), 25%)
            color lighten(brown(), 30%)
            padding 10px 30px
            text-align center
            text-decoration none
            border-radius 5px
            &:hover
                background darken(brown(), 20%)  

// Mobile
bp()
#head
    margin-bottom 20px
#head #logo, #head nav, #products figure
    stack()
#head #logo
    margin-bottom 20px
    w(1,2,f,c)
#products figure
    margin-bottom 20px 
endbp()























